<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/size_50dp"
    android:layout_marginHorizontal="30dp">

    <RelativeLayout
        android:id="@+id/enrollment_place"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/xml_input_box_round"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="롯데백화점 일원-05"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/enrollment_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/xml_input_box_round"
        android:gravity="center"
        android:layout_below="@+id/enrollment_place"
        android:layout_marginTop="@dimen/margin_10">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/enrollment_car_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enrollment_picture"
        android:layout_marginTop="@dimen/margin_20">

        <TextView
            android:id="@+id/car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차량 번호"
            android:layout_marginLeft="@dimen/margin_10"/>

        <EditText
            android:id="@+id/input_car_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/car_number"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingLeft="@dimen/accept_temps_item_padding_10"
            android:hint="차량 번호를 입력하세요."
            android:background="@drawable/xml_input_box_round"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/enrollment_car_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enrollment_car_number"
        android:layout_marginTop="@dimen/margin_20">

        <TextView
            android:id="@+id/car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차량 유형"
            android:layout_marginLeft="@dimen/margin_10"/>

        <EditText
            android:id="@+id/input_car_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/car_type"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingLeft="@dimen/accept_temps_item_padding_10"
            android:hint="차량 유형"
            android:background="@drawable/xml_input_box_round"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/enrollment_sale_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enrollment_car_type"
        android:layout_marginTop="@dimen/margin_20">

        <TextView
            android:id="@+id/sale_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감면 유형"
            android:layout_marginLeft="@dimen/margin_10"/>

        <EditText
            android:id="@+id/input_sale_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/sale_type"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingLeft="@dimen/accept_temps_item_padding_10"
            android:hint="감면 유형"
            android:background="@drawable/xml_input_box_round"/>

    </RelativeLayout>

</RelativeLayout>