<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:weightSum="4">

    <RelativeLayout
        android:id="@+id/footer_layout_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/footer_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_home_24"/>

        <TextView
            android:id="@+id/footer_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/footer_image_1"
            android:layout_centerHorizontal="true"
            android:text="홈"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer_layout_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/footer_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_add_circle_outline_24"/>

        <TextView
            android:id="@+id/footer_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/footer_image_2"
            android:layout_centerHorizontal="true"
            android:text="등록"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer_layout_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/footer_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/footer_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/footer_image_3"
            android:layout_centerHorizontal="true"
            android:text="조회"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer_layout_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/footer_image_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/footer_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/footer_image_4"
            android:layout_centerHorizontal="true"
            android:text="더보기"/>

    </RelativeLayout>

</LinearLayout>